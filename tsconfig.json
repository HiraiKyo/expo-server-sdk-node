{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Bundler",
    "lib": ["es2022"],
    "sourceMap": true,
    "declaration": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/__mocks__", "**/__tests__", "build"]
}
